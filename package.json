    "@types/jest": "^30.0.0",
    "angular-eslint": "20.1.1",
    "cypress": "^14.5.4",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.0.5",
    "jest-preset-angular": "^15.0.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2",
    "typescript-eslint": "8.34.1"
  }
